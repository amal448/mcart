<header class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-2">
                    <div class="header__logo">
                        {{!-- <a href="./index.html"><img src="/public/head/img/product/" alt=""></a> --}}
                   <h3><b>MEN'S CART</b></h3>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="/user-main">Home</a></li>
                                {{!-- <li><a href="/filter?filterby=FORMALS">Formals</a></li>
                                <li><a href="/filter?filterby=CASUALS">Casuals</a></li> --}}
                            {{#each category}}

                                                            <li><a href="/filter?filterby={{this.category}}">{{this.category}}</a></li>
                             {{!-- <li class=""><a href="/show-category/{{this._id}}">{{this.category}}</a></li> --}}
                            {{/each}}
                            
                       
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__right">
                        <div class="header__right__auth">
                           {{#if users}}
                            {{!-- {{#if person}} --}}

                            <a href="/logout">Logout!</a>
                            {{else}}
                            <a href="/login">Login</a>
                            {{/if}}
                            

                        {{#if person}}
                        <a href="/profile">{{person.name}}</a>

                        {{else}}
                        <a href="/signup">Register</a>

                        {{/if}}

                        </div>
                        <ul class="header__right__widget">
                            <li><span class="icon_search search-switch"></span></li>
                            <li><a href="/wish-list"><span class="icon_heart_alt"></span>
                                <div class="tip">{{wishCount}}</div>
                            </a></li>
                            {{!-- <li><a href="/cart"><span class="icon_bag_alt"></span> --}}
                             <li><a href="/cart/{{this._id}}"><span class="icon_bag_alt"></span>                           
                                <div class="tip" id="cart-count"> {{cartCount}}</div>
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>

