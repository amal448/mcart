<!-- Shop Cart Section Begin -->
<section class="shop-cart spad " style="text-align: center;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>No</th>
                                {{!-- <th>Name</th> --}}
                                <th>Date</th>
                                <th>ADDRESS</th>
                                <th>Status</th>
                                <th>View product</th>
                                <th>Total Amount</th>
                                <th>Payment mode</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                        {{#each order}}
                            <tr>
                                 <td>
                                {{inc @index}}
                                </td>

                                {{!-- <td>

                                </td> --}}
                                <td>{{this.date}}</td>
                                <td>
                                    {{this.deliveryDetails.homeaddress}}

                                </td>
                                <td>{{this.status}}</td>
                                {{#if this.cancelled}}
                                <td><a class="btn btn-success disabled" href="/view-order/{{this._id}}">View product</a>
                                </td>
                                {{else if this.returned }}     
                                <td><a class="btn btn-success disabled" href="/view-order/{{this._id}}">View product</a>
                                </td>
                                {{else}}
                                <td><a class="btn btn-success" href="/ordered-products/{{this._id}}">View product</a>
                                                                        
                                </td>                                
                                {{/if}}
                                <td>{{this.totalAmount}}</td>
                                <td>{{this.paymentMethod}}</td>
                                {{#if this.cancelled}}
                                
                                <td style="color: red;">{{this.status}}</td>
                                {{else if this.delivered}}
                                <td style="color: rgb(9, 194, 15);">delivered</td> 
                                {{else}}
                                <td><a class="btn btn-danger" href="/cancel-Order/{{this._id}}"
                                       onclick="return //confirm('Are you sure  {{this.Name}} ?')">Cancel order</a></td>
                                      
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">


            </div>
            <div class="col-md-3">
                <div class="cart__btn">
                    <a href="/">Continue Shopping</a>
                </div>

            </div>
            {{!-- <div class="col-md-3">
                <div class="cart__btn update__btn">
                    <a href="#"><span class="icon_loading"></span> Update cart</a>
                </div>
            </div> --}}
            <div class="col-md-3">

            </div>
        </div>
    </div>
</section>
<!-- Shop Cart Section End -->




